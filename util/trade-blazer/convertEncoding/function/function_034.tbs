//------------------------------------------------------------------------
// 简称: ExtremesArray
// 名称: 求数组的极值
// 类别: 用户函数
// 类型: 内建函数
// 输出: 数值型
//------------------------------------------------------------------------
 
Params
	NumericArrayRef arr;
	Bool bMax(True);	
	NumericRef ExtremeIndex;	
Vars
	Numeric arrSize;
	Numeric ExtremeVal;
	Numeric i;
Begin
	ExtremeVal = arr[0];
	ExtremeIndex = 0;
	arrSize = GetNumericArraySize(arr);
	For i = 1 To arrSize - 1
	{
		If ( (bMax And arr[i] > ExtremeVal) Or (!bMax And arr[i] < ExtremeVal) )
		{
			ExtremeVal = arr[i];
			ExtremeIndex = i;
		}
	}
	Return ExtremeVal;
End

