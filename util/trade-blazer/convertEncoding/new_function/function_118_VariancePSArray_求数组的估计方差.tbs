//------------------------------------------------------------------------
// 简称: VariancePSArray
// 名称: 求数组的估计方差
// 类别: 用户函数
// 类型: 内建函数
// 输出: 数值型
//------------------------------------------------------------------------
 
Params
	NumericArrayRef arr;
	Numeric DataType(1);
Vars
	Numeric arrSize;
	Numeric Divisor;
	Numeric SumSqr(0);
	Numeric Mean;	
	Numeric i;
Begin
	arrSize = GetNumericArraySize(arr);
	Divisor = arrSize - 1;
	If(DataType==1)
		Divisor = arrSize;
	If(Divisor > 0)
	{
		Mean = AverageArray(arr);
		For i = 0 to arrSize - 1
		{
			SumSqr = SumSqr + Sqr( arr[i] - Mean ) ;
		}
		Return SumSqr / Divisor ;
	}Else
	{
		Return 0;
	}
End

