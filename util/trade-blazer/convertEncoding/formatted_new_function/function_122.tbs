//------------------------------------------------------------------------
// 简称: XAverage
// 名称: 求指数平均
// 类别: 用户函数
// 类型: 内建函数
// 输出: 数值型
//------------------------------------------------------------------------

PARAMS
	NumericSeries Price(10);
	Numeric Length(10);
VARS
	Numeric sFcactor;
	NumericSeries XAvgValue;
BEGIN
	sFcactor = 2 / (Length + 1);
	if (CurrentBar == 0) {
		XAvgValue = Price;
	}
	else {
		XAvgValue = XAvgValue[1] + sFcactor * (Price - XAvgValue[1]);
	}
	RETURN XAvgValue;
END

