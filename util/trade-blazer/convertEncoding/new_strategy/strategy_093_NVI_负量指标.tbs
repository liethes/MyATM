//------------------------------------------------------------------------
// 简称: NVI
// 名称: 负量指标
// 类别: 公式应用
// 类型: 内建应用
//------------------------------------------------------------------------

Vars
	NumericSeries NVIValue;
Begin
	If(CurrentBar == 0)
	{
		NVIValue = 100;
	}Else
	{
		If(Vol >= Vol[1])
		{
			NVIValue = NVIValue[1];
		}Else
		{
			NVIValue = NVIValue[1]+(Close-Close[1])/Close[1]*NVIValue[1];
		}
	}
	PlotNumeric("NVI",NVIValue);
	PlotNumeric("NVI250",AverageFC(NVIValue,250));
End

