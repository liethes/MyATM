//------------------------------------------------------------------------
// 简称: OBV
// 名称: 能量潮
// 类别: 公式应用
// 类型: 内建应用
//------------------------------------------------------------------------

Vars
	NumericSeries OBVValue;
Begin
	If(CurrentBar == 0)
	{
		OBVValue = 0;
	}Else
	{
		If(Close>Close[1])
		{
			OBVValue = OBVValue[1]+Vol;
		}Else If(Close<Close[1])
		{
			OBVValue = OBVValue[1]-Vol;
		}Else
		{
			OBVValue = OBVValue[1];
		}
	}
	PlotNumeric("OBV",OBVValue);
End

