//------------------------------------------------------------------------
// 简称: UI
// 名称: 溃疡指数
// 类别: 公式应用
// 类型: 内建应用
//------------------------------------------------------------------------

Params
	Numeric Length( 14 ) ;
Vars
	Numeric SumSqr( 0 );
	Numeric nClose( 0 ) ;
	Numeric i;
	Numeric UIValue;
Begin
	SumSqr = 0 ;
	nClose = Close[ Length - 1 ] ;
	for i = Length - 2 downto 0 
	{
		If (nClose > Close[i] and nClose <> 0)
		{
			SumSqr = SumSqr + ( Round( ( ( nClose - Close[i] ) / nClose ) * 100, 2 ) )^2;
		}Else
		{
			nClose = Close[i] ;
		}
	}
	
	UIValue = ( SumSqr / Length )^0.5 ;
	PlotNumeric("UI",UIValue);
End


