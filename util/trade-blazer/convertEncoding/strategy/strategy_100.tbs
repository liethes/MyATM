//------------------------------------------------------------------------
// 简称: PVT
// 名称: 价量趋势指标
// 类别: 公式应用
// 类型: 内建应用
//------------------------------------------------------------------------

Vars
	NumericSeries PVTValue;
Begin
	If(CurrentBar == 0)
	{
		PVTValue = 0;
	}Else
	{
		PVTValue = (Close - Close[1])/Close[1]*Vol+PVTValue[1];
	}
	PlotNumeric("PVT",PVTValue);
End

